mixin team(data)
    .section__wrapper
        .team__block
            h1.team__title Присоединяйся к нашей команде
            .team__slider
                ul
                    li 
                        img(src="../static/img/content/team1.png", alt="Фотография", width="688", height="488")
                    li 
                        img(src="../static/img/content/team2.png", alt="Фотография", width="688", height="488")
                    li 
                        img(src="../static/img/content/team3.png", alt="Фотография", width="688", height="488")   
                .team__slider-controls
                    span.team__slider-arrow.team__slider-arrow--prev
                    span.team__slider-arrow.team__slider-arrow--next
            .team__form
                form(action="")
                    input(type="text", name="name", placeholder="Имя")
                    input(type="number", name="phone" placeholder="Телефон")
                    .team__select-block
                        select(name="vacancy").team__select
                            option 
                            option(value="manager") Менеджер по продажам
                            option(value="spammer") Спамер звонков
                            option(value="genDir") Генеральный директор
                            option(value="chel") Просто чел    
                    button.btn.btn_b(type="submit") Записаться на собеседование
                    label.team__politics
                        input#politics(type="checkbox", name="politics")
                        span Согласие на обработку персональных данных
                            svg(xmlns='http://www.w3.org/2000/svg' width='12' height='9' viewbox='0 0 12 9' fill='none')
